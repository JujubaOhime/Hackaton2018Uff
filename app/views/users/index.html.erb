
<body class="page-alunos">
<h1>Usu√°rios</h1>
    <div class="alunos">
    <% @users.each do |user| %>
      <div class="aluno-users">
        <div class="align-image">
        <%= image_tag("robot.svg", :alt => "imagem da pessoa", class:"icone-imagem") %>
        </div>
        <h2><%= user.name %></h2>
        <h3><%= user.email %></h3>
        <h3>12 anos de idade</h3>
        <h3><%= link_to 'Mostrar Estudante', user, class:"links-perfil" %></h3>
        <h3><%= link_to 'Editar Estudante', edit_user_path(user) , class:"links-perfil" %></h3>
        <h3><%= link_to 'Excluir Estudante', user, method: :delete, data: { confirm: 'Tem certeza?' }, class:"links-perfil"%></h3>
      </div>
    <% end %>
  </div>
<br>
<span class="logout-button"><%= link_to 'Adicionar Novo Estudante', new_user_path, class:"link-logout"%></span>
