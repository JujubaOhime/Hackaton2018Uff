<style>
  body {
	background: gray !important;
	font-family: montserrat, arial, verdana;
}
</style>

<section class="page_quizz">
  <% counter = 1 %>
  <section class="step_quiz">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/meyer-reset/2.0/reset.min.css">
    <div class="container-fluid">
      <!-- multistep form -->
      <form id="msform">
        <div class="container">
          <!-- progressbar -->
          <ul id="progressbar">
            <li class="active"></li>
            <% @questions.each do |question| %>
            <% if counter <= @questions.count() %>
            <li></li>
            <% end %>
            <% counter += 1 %>
            <% end %>
          </ul>
          <div class="row">
            <!--Button Exit-->
            <%= link_to 'Voltar', quizzes_path, class:"btn btn-danger btn-lg"%>
          </div>
        </div>
        <p id="notice">
          <%= notice %>
        </p>
        <p>
          <strong>Título:</strong>
          <%= @quiz.title %>
        </p>

        <p>
          <strong>Descrição:</strong>
          <%= @quiz.description %>
        </p>
        <!-----------START LOOPING------------------->
        <% counter = 0 %>
        <% @questions.each do |question| %>

        <fieldset id="step<%= counter %>">
          <!--PERGUNTAS-->
          <div class="container lts">
            <h2 class="fs-title">
              <%= link_to question.title, quiz_question_path(@quiz, question) %>
            </h2>
          </div>

          <!-- Multiple Radios -->
          <ul>

            <% question.answers.each do |answer| %>
            <li>
              <input type="radio" name="respostas<%= counter %>" required>
              <%= answer.content %>
            </li>
            <% end %>
          </ul>
          <!--Navegacao-->
          <input type="button" name="next" class="action-button nxt" data-step="step<%= counter %>" value="Responder" />
          <!--Navegacao-->

          <!--RESPOSTAS-->
          <div class="container lts hidden">
            <h1>Explicação</h1>
            <hr>
            <h2 class="fs-title">
              <%= question.answer.content if !question.answer.nil? %>
            </h2>
          </div>
        </fieldset>
        <% counter += 1 %>
        <% end %>
      </form>
    </div>

    <script src='http://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js'></script>
    <!-- Inclusão do Plugin jQuery Validation-->
    <script src="http://jqueryvalidation.org/files/dist/jquery.validate.js"></script>
  </section>
</section>