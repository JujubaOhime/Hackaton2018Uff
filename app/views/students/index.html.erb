<p id="notice"><%= notice %></p>

<h1>Students</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Nascimento</th>
      <th>Pontuação</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @students.each do |student| %>
      <tr>
        <td><%= student.name %></td>
        <td><%= student.email %></td>
        <td><%= student.birth %></td>
        <td><%= student.score %></td>
        <td><%= link_to 'Mostrar Estudante', student %></td>
        <td><%= link_to 'Editar Estudante', edit_student_path(student) %></td>
        <td><%= link_to 'Excluir Estudante', student, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

