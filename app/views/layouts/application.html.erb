<!DOCTYPE html>
<html>
  <head>
    <title>ProjetoMaravilha</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%=render "layouts/header" %>
    <% if !@hide_header %>
      <% if user_signed_in? %>
        <%= link_to 'Perfil', current_user, class:"link-perfil" %>
        <span class="logout-button"><%= link_to 'Sair', destroy_session_path(current_user), class:"link-logout", method: :delete %></span>
      <% end %>
    <% end %>
    <%= yield %>
  </body>
</html>
